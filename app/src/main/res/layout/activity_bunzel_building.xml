<!-- Displays building image, floor buttons, and selected floor plan -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/entranceImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bunzel_entrance" />

    <TextView
        android:id="@+id/floorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a floor"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

    <ImageView
        android:id="@+id/floorPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:weightSum="4">

        <Button
            android:id="@+id/floor1"
            android:text="Floor 1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/floor2"
            android:text="Floor 2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/floor3"
            android:text="Floor 3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/floor4"
            android:text="Floor 4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
