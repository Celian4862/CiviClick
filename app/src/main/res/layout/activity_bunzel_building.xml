<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BunzelBuildingActivity">

    <!-- Entrance Preview (Smaller) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_box">

        <ImageView
            android:id="@+id/floorEntranceImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Entrance"
            android:src="@drawable/bunzel_entrance" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/floorTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a floor"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textAlignment="center"
        android:paddingBottom="4dp" />

    <!-- Inline Room Search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <AutoCompleteTextView
            android:id="@+id/floorRoomInput"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Search for a room"
            android:background="@drawable/rounded_box"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:textSize="14sp"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnSearchRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍"
            android:layout_marginStart="8dp"
            android:contentDescription="Search Room"
            android:textSize="16sp"
            style="@style/NeonButton" />
    </LinearLayout>

    <!-- Floor Select Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/btnBasement"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="BASEMENT"
            android:textSize="12sp"
            style="@style/NeonButton" />

        <Button
            android:id="@+id/btnFloor1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="FLOOR 1"
            android:textSize="12sp"
            style="@style/NeonButton" />

        <Button
            android:id="@+id/btnFloor2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="FLOOR 2"
            android:textSize="12sp"
            style="@style/NeonButton" />

        <Button
            android:id="@+id/btnFloor3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="FLOOR 3"
            android:textSize="12sp"
            style="@style/NeonButton" />

        <Button
            android:id="@+id/btnFloor4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="FLOOR 4"
            android:textSize="12sp"
            style="@style/NeonButton" />
    </LinearLayout>

    <!-- Floor Plan (Main Area) -->
    <ImageView
        android:id="@+id/floorPlan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="Floor Plan" />

    <!-- Room Route Video -->
    <VideoView
        android:id="@+id/floorVideo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />
</LinearLayout>
